# ==============================================
# Configuration Django - Portail Captif UCAC-ICAM
# ==============================================
# IMPORTANT: Copier ce fichier en .env et remplir avec vos valeurs
# ATTENTION: Ne JAMAIS commiter le fichier .env dans git !
# ==============================================

# Django Settings
# ---------------
# OBLIGATOIRE: SECRET_KEY doit être unique et sécurisée
# Générer avec: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-change-in-production

# DEBUG=True pour développement, DEBUG=False pour production
# ATTENTION: Ne JAMAIS utiliser DEBUG=True en production !
DEBUG=True

# Hôtes autorisés (séparés par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (MySQL)
# ----------------
# OBLIGATOIRE: DB_PASSWORD doit TOUJOURS être défini
# Utiliser un mot de passe fort (min 16 caractères)
DB_ENGINE=django.db.backends.mysql
DB_NAME=captive_portal
DB_USER=root
DB_PASSWORD=your-mysql-password-CHANGE-THIS
DB_HOST=localhost
DB_PORT=3306

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Mikrotik Settings
# ------------------
# IMPORTANT: Changer le mot de passe par défaut MikroTik
MIKROTIK_HOST=192.168.88.1
MIKROTIK_PORT=8728
MIKROTIK_USERNAME=admin
MIKROTIK_PASSWORD=your-mikrotik-password-CHANGE-THIS
MIKROTIK_USE_SSL=False

# RADIUS Settings
# ---------------
# IMPORTANT: RADIUS_SECRET doit être un secret fort partagé
# Ne JAMAIS utiliser "testing123" en production !
RADIUS_SERVER=127.0.0.1
RADIUS_SECRET=change-this-to-strong-secret
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813

# Captive Portal Settings
PORTAL_REDIRECT_URL=http://example.com
SESSION_TIMEOUT=3600
