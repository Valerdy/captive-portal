# =============================================================================
# Captive Portal - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values

# =============================================================================
# Django Settings
# =============================================================================
DEBUG=False
SECRET_KEY=your-super-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# =============================================================================
# Database Configuration
# =============================================================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=captive_portal_db
DB_USER=postgres
DB_PASSWORD=your-secure-database-password
DB_HOST=db
DB_PORT=5432

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# FreeRADIUS Configuration
# =============================================================================
RADIUS_SERVER=freeradius
RADIUS_SECRET=your-radius-shared-secret
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813

# =============================================================================
# MikroTik Configuration
# =============================================================================
MIKROTIK_HOST=192.168.88.1
MIKROTIK_PORT=8728
MIKROTIK_USERNAME=admin
MIKROTIK_PASSWORD=your-mikrotik-password
MIKROTIK_USE_SSL=false
MIKROTIK_AGENT_URL=http://mikrotik-agent:3001

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:80,https://your-domain.com

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_URL=http://localhost:8000/api
